<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
  	
	
	<div class="form_error_container">
      <p><b<%= t("errors.template.header", count: @comment.errors.count) %> <%= t(:form_error)%></p></b>

      <% @comment.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    </div>
  <% end %>
  
  
  <div class="form_container">

	  <div class="default">

    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :event_id %>
	

    <%= f.label t(".your_comment") %><br />
    <%= f.text_area :content, :size => "10x11" %>

	<div class="default_submit">
		<div class="actions">
    <%= f.submit t(".submit")%></div>
</div>
		</div>
	</div>
<% end %>
