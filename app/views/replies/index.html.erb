<% content_for :no_container do %>

<% provide(:title, "Your Replies:") %>


<% if @all_replies.blank? %> <!-- wenn neuer user ohne replies -->

<div class="how_to_container_replies">
	
  <% render :partial => "translations"%>
	<%= yield :replies_first_ever %>
	
</div>

<% else %> 

<% if @future_replies.blank? %><!-- wenn schon mal welche gemacht, aber gerade keine. -->

<div class="how_to_container_replies">

  <% render :partial => "translations"%>
	<%= yield :replies_currently_empty %>
  	
</div>

<% else%> <!-- wenn welche da -> auflistung aller zukÃ¼nfitgen -->


<% unless @replies_waiting.blank? %>

<div class = "head_container"><p><%= t(".waiting_replies")%></p></div>

<% @replies_waiting.each do |reply| %>

<% unless reply.event.date < Date.today %>

<div class="general_container">

	<div class="header">
		<div class="left"><p><%= l reply.event.date, :format => "%A, %d.%m:" %></p></div>
        
		<div class="right">
			<p><% if reply.approved == true && reply.looked_at_invitation == false %>
			<b class="counter"><%= t(:new) %></b><% else %>&nbsp;<% end %></p>
		</div>
	</div>

	<div class="content">	
		<div class="general_test"><%= reply.event.short_description %></div>
	</div>

	<div class="footer">
		<div class="left"><p>&nbsp;</p></div>
		<div class="right">
			<p><%= link_to t(:show), reply.event if reply.approved == true %></p>
		</div>
	</div>

</div>

<% end %><% end %><% end %>


