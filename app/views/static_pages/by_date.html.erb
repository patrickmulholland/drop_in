
<% date_counter = 0 %>

<% content_for :no_container do %>




<!-- ><div class="overview_container"><p><b>Upcoming Events by Date: </b>
	
	
	
	Reply or <%# link_to 'create your own', new_event_path %></p></div> -->


<% @events.order("created_at DESC").each do |event| %>

<% if event.date != date_counter %>


<div class="head_container">
<% if event.date.today? %>
	<p>Events for Today:</p></div>
<% else %>
	<p><%= event.date.strftime("%A, %d") %>:</p></div>
<% end%>
<% end %>



<div class="general_container">
	
<div class="header"><p><%= link_to event.user.name, event.user %>
	wrote:</p></div>
	
	<div class="content">
		<div class="left">
	<% if event.user.profile %>
	<p><%= link_to image_tag(event.user.profile.avatar.url(:thumb)), event.user %></p>
	<% else %>
	<p><%= image_tag "/avatars/thumb/missing.png"%></p>
	<% end %>
</div>
<div class="right">
	<p><%= event.short_description %></p>
	
</div>
</div>
	
<div class="footer">
		
	<div class="left"><p><b class="replies"><%= event.replies.count %></b><b class="commits"><%= event.replies.where(:commit => true).count %></b></p></div>
		
	<div class="right"><p>
		<%= link_to 'Reply', new_reply_path(:id => event) if user_signed_in? && user_is_not_current_user?(event) && !@your_replies.find_by_event_id(event.id) %></p></div>
		
</div>

<% date_counter = event.date %>


</div><!-- end post_container -->
<% end %>


<%= will_paginate(@events) %>

<% end %>

