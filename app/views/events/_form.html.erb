


<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
  
  
    <div class="form_error_container">
      <p><b><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</b></p>

      <p><% @event.errors.full_messages.each do |msg| %>
       &bullet;&nbsp;<%= msg %></br>
  
  
  
      <% end %></p>

    </div>
  <% end %>
  
  
  
  <div class="form_container">
	  
	  <div class="left">

    <%= f.hidden_field :user_id %>

  <div class="textarea">
    <%= f.label "Describe briefly what you're up to do:" %><br />
    <%= f.text_area :short_description, :size => "10x5" %>
  </div>
  
</div>
<div class="right">
  <div class="input">
    <%= f.label "When:" %><br />
    <%= f.text_field :date %>
</div>
<div class="time">
    <%= f.label "At:" %><br />
    <%= f.time_select :time %>
  </div>
</div> 
	</div>
  
  
    <div class="form_container">
  
		<div class="spacer">Only visible for invited users:</div>
	<div class="left">
    <%= f.hidden_field :city %>
  <div class="street">
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>
</div><div class="right">
  <div class="input">
    <%= f.label :meeting_point %><br />
    <%= f.text_field :meeting_point %>
  </div>
	</div>
	
	
	<div class="bottom">
  <div class="details">
    <%= f.label :details %><br />
    <%= f.text_area :details, :size => "10x6" %>
  </div>
  <div class="submit">
    <%= f.submit %>
  </div>
</div>
</div>
  
  
<% end %>
